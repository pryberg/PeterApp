<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="PeterApp.QuotesPage"
             Padding="20">

    <StackLayout HorizontalOptions="Center" BindingContext="{x:Reference slider}">
        <Button Text="Next agian" AutomationId="nextButton" Clicked="Handle_Clicked"></Button>
        <Label x:Name="lfont" AutomationId="textLabel" Text="Test for Font"></Label>
        <Slider AutomationId="fontSizeSlider" Maximum="50" Minimum="16" ValueChanged="Handle_ValueChanged" x:Name="slider"></Slider>
        <Label FontSize="{Binding Value}" AutomationId="fontSizeLabel" x:Name="ltext">Text for contrainl</Label>
        <Button AutomationId="myCrashes" Text="Crashes now" Clicked="Handle_Clicked_1"></Button>
    </StackLayout>
</ContentPage>
